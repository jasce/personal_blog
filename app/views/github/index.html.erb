
<p style="padding: 22px;"></p>
<h1 class="title">My Github</h1>
<p style="padding: 3px;"></p>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-3">
					<div class="card">
					  <%= image_tag(@repos.first.owner.avatar_url , class: "card-img-top")  %>				  
					  <div class="card-block">
					    <h4 class="card-title">Jasmeet Singh</h4>
					    <p class="card-text text-muted"><small>Joined on Jul 23, 2015</small></p>
					    <%=link_to "Follow On Github","http://www.github.com/jasce", class: "btn btn-outline-success", target: :_blank%>
				    
					  </div>
					</div>
				</div>
				<div class="col-md-8 offset-md-1">
					
					<ul class="nav nav-tabs" role="tablist">
					  <li class="nav-item">
					    <a class="nav-link active" data-toggle="tab" href="#repositories" role="tab">Repositories ( <%=@repos.length %> )</a>
					  </li>
					  <li class="nav-item">
					    <a class="nav-link" data-toggle="tab" href="#activity" role="tab">Contributions</a>
					  </li>
					  
					  <li class="nav-item">
					    <a class="nav-link" data-toggle="tab" href="#following" role="tab">Following ( <%= @following.length %> )</a>
					  </li>					  
					</ul>
					<!-- Tab panes -->
					<div class="tab-content" style="max-height: 800px; overflow-y: auto;">
					  <div class="tab-pane active" id="repositories" role="tabpanel">
					  <br>
					  <% @repos.each do |repo| %>
					  <h2 class="repo"><%= link_to repo.name , repo.html_url , :target => '_blank' %></h2>
					  <p class="text-muted"><small ><%= "Updated #{time_ago_in_words(repo.pushed_at)} ago"  %></small>
					  <span class="text-muted" style="font-size: 16px;"><small style="margin-left: 30px;"><%=repo.language %></small> </span>					  	

					  	<% if repo.fork %>
						  <span class="text-muted"> <small style="margin-left: 30px;"> Forked Repository</small></span>
						  <% end %>	
					  </p>						  
						  <hr style="margin: 25px 0px;">
					 	<% end %>
					 </div>

					<div class="tab-pane" id="activity" role="tabpanel">
						 <div id="feed"> </div>					  	
					</div>
						<div class="tab-pane" id="following" role="tabpanel">
							<% @following.in_groups_of(2,false).each do |follow| %>
									<div class="row ">  
									      <% follow.each do |f| %>
									        <div class="col-md-4 offset-md-1">     							             
												<div class="card">
												  <%= image_tag(f.avatar_url , class: "card-img-top" )%>
												  <div class="card-block">
												    <h4 class="card-title" style="margin-top: 10px;"><%= f.login %></h4>		    
												    <%= link_to 'Follow' , f.html_url ,  class: "btn btn-outline-success" , target: :_blank %>
												  </div>
												</div>
									                   
									        </div> 
									        	<div class="col-md-1"></div>

									      <% end %>	
									    </div>	
								<% end %>						  						
								
						</div>
					
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
<p style="padding: 30px;"></p>






