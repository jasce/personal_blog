<%
meta title: @project.title,
     description: @project.description.gsub(/[^a-zA-Z. ]/, '').truncate_words(50),    
 keywords: %w(rails5 ruby rails windows devise carrierwave blog)  
%>
<%
meta og: {
  image: "http://jasmeet.herokuapp.com/assets/intro-bg.jpg",
  title: @project.title,
  type: 'project'
}
%>



<p style="padding: 35px;"></p>

<div class="container">
	<div class="row">
		<div class="col-md-10 offset-md-1">
					<div style="text-align: center; margin-bottom: 60px;">
					<h1 class="title-project"><%= @project.title %></h1>
					<p class="text-muted"><%= @project.created_at.strftime('%A, %B %d') %></p>
					</div>					
				
				<div id="content" class="description">
					<%= markdown @project.description %>
					 
					
					<!--<a href="<%= @project.link%>"class="project_button"target="_blank">Visit at <%= @project.title%></a>-->
						<div style="text-align: center; margin: 50px 0px;">
							<%=link_to "Visit  #{@project.title}","http://#{@project.link}", class: "btn btn-outline-primary about-btn", target: :_blank%>
						</div>
					
				</div>

				<% if user_signed_in? %>
					<div id="admin_links">
						<%= link_to "Edit Project",edit_project_path(@project) %>
						<%= link_to "Delete Project",project_path(@project),method: :delete,data:{confirm: "Are you sure?"} %>
					</div>
					<% end %>
				<hr>
				</div>
		 </div>
	</div>




