<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime('%A,%B %d') %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>
	<div id="content">
		<%= markdown @project.description %>
		<div class="button_wrapper"> 
		
		<!--<a href="<%= @project.link%>"class="project_button"target="_blank">Visit at <%= @project.title%></a>-->
		<%=link_to "Visit at #{@project.title}","http://#{@project.link}", class: :project_button, target: :_blank%>

		</div>
	</div>
	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Edit Project",edit_project_path(@project) %>
			<%= link_to "Delete Project",project_path(@project),method: :delete,data:{confirm: "Are you sure?"} %>
		</div>
		<% end %>
	<hr>
	</div>